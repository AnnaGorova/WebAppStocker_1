<div class="col-md-6 col-lg-6 col-xl-3">
    <div class="footer-item">
        <h4 class="text-white mb-4">@Model.Title</h4>

        <div class="d-flex align-items-center">
            <i class="fas fa-map-marker-alt text-primary me-3"></i>
            <p class="text-white mb-0">@Model.ContactInfo.Address</p>
        </div>

        <div class="d-flex align-items-center">
            <i class="fas fa-envelope text-primary me-3"></i>
            <p class="text-white mb-0">@Model.ContactInfo.Email</p>
        </div>

        <div class="d-flex align-items-center">
            <i class="fa fa-phone-alt text-primary me-3"></i>
            <p class="text-white mb-0">@Model.ContactInfo.Phone</p>
        </div>

        <div class="d-flex align-items-center mb-4">
            <i class="fab fa-firefox-browser text-primary me-3"></i>
            <p class="text-white mb-0">@Model.ContactInfo.Website</p>
        </div>

        <div class="d-flex">
            @foreach (var social in Model.SocialLinks)
            {
                <a class="btn btn-primary btn-sm-square rounded-circle me-3" href="@social.Url">
					<i class="@social.Icon text-white"></i>
				</a>
            }
            
        </div>
    </div>
</div>